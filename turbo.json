{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "pnpm-lock.yaml"
  ],
  "globalEnv": [
    "NODE_ENV",
    "DATABASE_URL",
    "AUTH_SECRET",
    "EMAIL_FROM",
    "EMAIL_SERVER"
  ],
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true
    },
    "build": {
      "dependsOn": [
        "^db-deploy",
        "^db-generate"
      ],
      "outputs": [
        ".next/**",
        "!.next/cache/**"
      ]
    },
    "db-deploy": {
      "cache": false
    },
    "db-generate": {
      "cache": false
    },
    "db-push": {
      "cache": false
    },
    "lint": {},
    "debug": {},
    "test": {},
    "type-check": {}
  }
}