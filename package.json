{
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "dotenv-run -- turbo run build",
    "dev:web": "dotenv-run -- turbo run dev --scope=@propsto/web",
    "dev:app": "dotenv-run -- turbo run dev --scope=@propsto/app",
    "dev:all": "dotenv-run -- turbo run dev",
    "lint": "turbo run lint",
    "validate": "turbo run validate",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "packageManager": "pnpm@8.10.0",
  "author": "Leo <leo@props.to>",
  "name": "props.to",
  "dependencies": {
    "@propsto/tsconfig": "workspace:*",
    "eslint": "^8.54.0",
    "husky": "^8.0.3",
    "prettier": "^3.1.0",
    "turbo": "^1.12.2"
  },
  "devDependencies": {
    "@dotenv-run/cli": "^1.3.5"
  }
}